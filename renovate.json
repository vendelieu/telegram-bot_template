{
  "extends": [
    "config:recommended",
    ":automergeMinor"
  ],
  "baseBranchPatterns": [
    "master",
    "conversation",
    "echo",
    "poll",
    "heroku",
    "spring-bot"
  ],
  "automergeType": "branch",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
